<article class="post border shadow">
    <div class="hstack gap-3 border bg-light">
        <div class="fs-3 fst-italic">
            <a href="/post/{{id}}">{{title}}</a>
        </div>
            
       <div class="ms-auto">
           Posted by {{user.username}} on {{ format_date created_at}}
       </div>
       
    </div>
    
    <div class="font-monospace lh-base">
        {{content}}
    </div>
    
</article>