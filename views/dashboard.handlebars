{{#if posts.length}}
<section>
  <h2>Your Dashboard</h2>
  <ol>
    {{#each posts as |post|}}
    <ul>
      <article class="post">
     <div class="hstack gap-3 border bg-light">
        <div class="fs-2 fst-italic">
            <a href="/post/{{id}}">{{title}}</a>
        </div>
            
       <div class="ms-auto">
           Posted by {{user.username}} on {{ format_date created_at}}
       </div>
       
    </div>
    </article>
      
    </ul>
    {{/each}}
  </ol>
</section>
{{/if}}

<div>
    <button type="submit"><a href="/dashboard/newpost" class="create-btn">Create New Post</a></button>
</div>

